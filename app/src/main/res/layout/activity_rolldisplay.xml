<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <EditText
        android:id="@+id/txtname"
        android:layout_width="245dp"
        android:layout_height="87dp"
        android:ems="10"
        android:inputType="textPersonName"
       android:hint="Name"
        android:editable="false"
        android:layout_above="@+id/txtsex"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp" />

    <EditText
        android:id="@+id/txtphone"
        android:layout_width="276dp"
        android:layout_height="44dp"
        android:layout_above="@+id/txtname"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:editable="false"
        android:hint="phone Number"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/txtaadhar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Aadhar No"
        android:editable="false"
        android:layout_above="@+id/btnuser"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="81dp" />

    <EditText
        android:id="@+id/txtsex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Gender"
        android:editable="false"
        android:layout_above="@+id/txtaadhar"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp" />

    <Button
        android:id="@+id/btnuser"
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:text="User"
        android:layout_alignBaseline="@+id/btnrider"
        android:layout_alignBottom="@+id/btnrider"
        android:layout_toStartOf="@+id/btnrider"
        android:layout_marginEnd="44dp" />

    <Button
        android:id="@+id/btnrider"
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:text="Rider"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/txtaadhar"
        android:layout_marginBottom="63dp" />

    <Button
        android:id="@+id/signout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/sign_out" />
</RelativeLayout>
